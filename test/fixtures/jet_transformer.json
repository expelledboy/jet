[
  {
    "object":
    {
      "id": 123,
      "registered":true,
      "hash": "12345",
      "details": {
        "name": "Zeus",
        "age": 25,
        "balance": 100.05,
        "numbers": ["0712228373", "0112738292"]
      },
      "contacts": [
        { "name": "John", "age": 30, "balance": 15000 },
        { "name": "Mary", "age": 50, "balance": 20000.50 }
      ]
    },
    "transforms": [
      {
        "description": "to flat object transform",
        "transform": {
          "/name": "/details/name",
          "/age": { "path": "/details/age" },
          "/contacts": "/contacts"
        },
        "result": {
          "name": "Zeus",
          "age": 25,
          "contacts": [
            { "name": "John", "age": 30, "balance": 15000 },
            { "name": "Mary", "age": 50, "balance": 20000.50 }
          ]
        }
      },
      {
        "description": "to flat object with conversion transforms",
        "transform": {
          "/name": "/details/name",
          "/age": {"path": "/details/age", "transform": "to_string"},
          "/hash-int":{"path": "/hash", "transform": "to_integer"}
        },
        "result": {
          "name": "Zeus",
          "age": "25",
          "hash-int": 12345
        }
      },
      {
        "description": "object from props transform",
        "transform": {
          "/person": {
            "properties": {
              "/id": "/id",
              "name": "/details/name",
              "/age": "/details/age"
            }
          }
        },
        "result": {"person": {"id":123, "name": "Zeus", "age": 25}}
      },
      {
        "description": "foreach transform",
        "transform": {
          "/name": "/details/name",
          "/age": "/details/age",
          "/contacts": {
            "foreach": "/contacts",
            "properties": {
              "/id": "/id",
              "/person": "0/name",
              "/age": "0/age"
            }
          }
        },
        "result": {
          "name": "Zeus",
          "age": 25,
          "contacts": [
            { "id": 123, "person": "John", "age": 30},
            { "id": 123, "person": "Mary", "age": 50}
          ]
        }
      },
      {
        "description": "complex foreach transform",
        "transform": {
          "/name": "/details/name",
          "/age": "/details/age",
          "/contacts": {
            "foreach": "/contacts", "properties": {
              "/id": "/id",
              "/person": {
                "properties": {
                  "name": "0/name",
                  "/age": {"path": "0/age", "transform": "to_string"}
                }
              }
            }
          }
        },
        "result": {
          "name": "Zeus",
          "age": 25,
          "contacts": [
            { "id": 123, "person": {"name": "John", "age": "30"}},
            { "id": 123, "person": {"name": "Mary", "age": "50"}}
          ]
        }
      },
      {
        "description": "string/array length transform test",
        "transform": {
          "/name-length": {"path": "/details/name", "transform": "length"},
          "/contact-count": { "path": "/contacts", "transform": "length"}
        },
        "result": {
          "name-length": 4,
          "contact-count": 2
        }
      },
      {
        "description": "transforms with defaults",
        "transform": {
          "/name": "/details/name",
          "/age": { "path": "/details/age", "default": 4 },
          "/arbitrary1": {"path": "/arbitrary1", "default": "foo"},
          "/arbitrary2": {"default": "bar"},
          "/contacts": "/contacts"
        },
        "result": {
          "name": "Zeus",
          "age": 25,
          "arbitrary1": "foo",
          "arbitrary2": "bar",
          "contacts": [
            { "name": "John", "age": 30, "balance": 15000 },
            { "name": "Mary", "age": 50, "balance": 20000.50 }
          ]
        }
      }
    ]
  }
]
